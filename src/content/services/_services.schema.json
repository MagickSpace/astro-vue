{
  "type": "object",
  "properties": {
    "icon": {
      "type": "string"
    },
    "lang": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "draft": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "serviceImage": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "format": {
          "type": "string",
          "enum": ["png", "jpg", "jpeg", "tiff", "webp", "gif", "svg", "avif"]
        }
      },
      "required": ["src", "width", "height", "format"],
      "additionalProperties": false
    },
    "language": {
      "type": "string",
      "enum": ["en", "es", "uk", "ru", "de", "fr", "pl"]
    }
  },
  "required": ["title", "description", "serviceImage"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
