{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "versionNumber": {
      "type": "string"
    },
    "image": {
      "type": "object",
      "properties": {
        "src": {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            },
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpg",
                "jpeg",
                "tiff",
                "webp",
                "gif",
                "svg",
                "avif"
              ]
            }
          },
          "required": ["src", "width", "height", "format"],
          "additionalProperties": false
        },
        "alt": {
          "type": "string"
        }
      },
      "required": ["src", "alt"],
      "additionalProperties": false
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "lang": {
      "type": "string"
    }
  },
  "required": ["title", "description", "versionNumber", "image", "date"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
