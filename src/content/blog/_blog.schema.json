{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "draft": {
      "type": "boolean",
      "default": false
    },
    "pubDate": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "updatedDate": {
      "type": "string"
    },
    "ogImage": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            },
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpg",
                "jpeg",
                "tiff",
                "webp",
                "gif",
                "svg",
                "avif"
              ]
            }
          },
          "required": ["src", "width", "height", "format"],
          "additionalProperties": false
        },
        {
          "type": "string"
        }
      ]
    },
    "heroImage": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "format": {
          "type": "string",
          "enum": ["png", "jpg", "jpeg", "tiff", "webp", "gif", "svg", "avif"]
        }
      },
      "required": ["src", "width", "height", "format"],
      "additionalProperties": false
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["admin"]
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["New!"]
    },
    "postLayout": {
      "type": "string",
      "enum": ["simple", "column"],
      "default": "column"
    },
    "relatedPosts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "language": {
      "type": "string",
      "enum": ["en", "es", "uk", "ru", "de", "fr", "pl"]
    }
  },
  "required": ["title", "description", "pubDate", "heroImage"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
